# Cloudflare Account ID
CF_ACCOUNT_ID=your_account_id

# D1 Database ID
CF_DATABASE_ID=your_database_id

# API Token with D1 read/write access
D1_API_TOKEN=your_api_token

# Admin password (simple password auth)
ADMIN_PASSWORD=your_secure_password

# Cloudflare Pages deploy hook URL (for triggering rebuilds)
CF_DEPLOY_HOOK_URL=https://api.cloudflare.com/client/v4/pages/webhooks/deploy_hooks/your_hook_id
