{
  "name": "@aipostsecret/api",
  "version": "1.0.0",
  "private": true,
  "description": "AI Post Secret Submission API - Cloudflare Worker",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:migrate:local": "wrangler d1 execute aipostsecret-db --local --file=./schema.sql",
    "db:migrate:prod": "wrangler d1 execute aipostsecret-db --remote --file=./schema.sql"
  },
  "dependencies": {
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "typescript": "^5.4.5",
    "wrangler": "^3.57.0"
  }
}
