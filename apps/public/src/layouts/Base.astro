---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: #1a1a1a;
        background: #fafafa;
        max-width: 48rem;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      a {
        color: #2563eb;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      h1 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
